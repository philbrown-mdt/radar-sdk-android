<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/debugLogsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Debug Logs"
        android:textSize="24dp"
        android:textColor="@color/grayDark"
    />

    <ListView
        android:id="@+id/debugLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons"
        android:layout_below="@+id/debugLogsTitle"
    />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
    >

        <Button
            android:id="@+id/onAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:text="Track once"
            android:layout_marginBottom="16dp"
            />

        <Button
            android:id="@+id/switchAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:background="@color/gray"
            android:textColor="@color/grayDark"
            android:text="Switch action"
            />

    </LinearLayout>

</RelativeLayout>